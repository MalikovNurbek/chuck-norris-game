{
  "root": true,
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "extends": [
    "@nuxt/eslint-config",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "vue/multi-word-component-names": "off",
    "prettier/prettier": "error",
    "no-console": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "vue/no-v-html": "off"
  }
}